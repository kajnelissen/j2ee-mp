<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAdServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.AddAdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.admin.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MemberlistServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.admin.MemberlistServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSeedServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.seeders.AdminSeedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllAdsServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.AllAdsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAdServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.ShowAdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAdServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.admin.DeleteAdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateBidServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.bids.CreateBidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBidServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.bids.DeleteBidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditBidServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.bids.EditBidServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAdServlet</servlet-name>
        <servlet-class>nl.rkk.marktplaats.servlets.ads.EditAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAdServlet</servlet-name>
        <url-pattern>/ads/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/admin/users/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MemberlistServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSeedServlet</servlet-name>
        <url-pattern>/seed/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllAdsServlet</servlet-name>
        <url-pattern>/ads</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAdServlet</servlet-name>
        <url-pattern>/ads/show</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAdServlet</servlet-name>
        <url-pattern>/admin/ads/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateBidServlet</servlet-name>
        <url-pattern>/bids/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBidServlet</servlet-name>
        <url-pattern>/bids/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditBidServlet</servlet-name>
        <url-pattern>/bids/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAdServlet</servlet-name>
        <url-pattern>/ads/edit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
